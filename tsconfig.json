{
	"compilerOptions": {
	  "module": "Node16",
	  "moduleResolution": "Node16",
	  "target": "ES2022",
	  "lib": ["ES2022"],
	  "outDir": "dist",
	  "rootDir": "src",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "resolveJsonModule": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
  }
  